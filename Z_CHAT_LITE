        db.ref(`users/${targetId}/requests/${myId}`).set({
            name: myName,
            roomId: myRoom,
            time: Date.now()
        }).then(() => alert("ØªÙ… Ø¥Ø±Ø³Ø§Ù„ Ø·Ù„Ø¨ Ø§Ù„ØµØ¯Ø§Ù‚Ø© ÙˆØ§Ù„Ø¯Ø¹ÙˆØ©!"));
    }

    function listenToRequests() {
        db.ref(`users/${myId}/requests`).on('value', (snap) => {
            const content = document.getElementById('notif-content');
            const badge = document.getElementById('notif-count');
            content.innerHTML = "";
            let count = 0;
            
            snap.forEach(child => {
                count++;
                const req = child.val();
                content.innerHTML += `
                    <div class="notif-item">
                        <div onclick="goToRoom('${req.roomId}')">
                            <div style="font-size:13px;"><b>${req.name}</b> ÙŠØ±Ø³Ù„ Ù„Ùƒ Ø·Ù„Ø¨Ø§Ù‹</div>
                            <div style="font-size:10px; color:var(--primary);">Ø§Ø¶ØºØ· Ù„Ù„Ø§Ù†ØªÙ‚Ø§Ù„ Ù„Ù„ØºØ±ÙØ©: ${req.roomId}</div>
                        </div>
                        <div class="notif-actions">
                            <button onclick="acceptFriend('${child.key}','${req.name}')" style="background:var(--primary)">Ù‚Ø¨ÙˆÙ„</button>
                            <button onclick="rejectReq('${child.key}')" style="background:#333; color:#fff">Ø±ÙØ¶</button>
                        </div>
                    </div>`;
            });
            badge.style.display = count > 0 ? 'flex' : 'none';
            badge.innerText = count;
        });
    }

    function goToRoom(room) {
        if(confirm(`Ø§Ù„Ø§Ù†ØªÙ‚Ø§Ù„ Ù„Ù„ØºØ±ÙØ© ${room}ØŸ`)) {
            myRoom = room;
            document.getElementById('room-display').innerText = "ØºØ±ÙØ©: " + myRoom;
            document.getElementById('chat-container').innerHTML = "";
            db.ref(`rooms/${myRoom}/messages`).off();
            db.ref(`users/${myId}`).update({ room: myRoom });
            loadMessages();
            toggleNotifications();
        }
    }

    function loadUsers() {
        db.ref('users').on('value', (snap) => {
            const list = document.getElementById('userList');
            list.innerHTML = "";
            snap.forEach(child => {
                const u = child.val();
                if(child.key === myId) return;
                list.innerHTML += `
                    <div class="user-card">
                        <span><span class="status-dot ${u.online ? 'online' : 'offline'}"></span>${u.name}</span>
                        <button onclick="sendFriendRequest('${child.key}')" style="background:none; border:1px solid var(--primary); color:var(--primary); padding:4px 8px; border-radius:5px; cursor:pointer; font-size:10px;">Ø¥Ø¶Ø§ÙØ©</button>
                    </div>`;
            });
        });
    }

    function togglePanel() { document.getElementById('sidePanel').classList.toggle('active'); }
    function toggleNotifications() {
        const p = document.getElementById('notif-popup');
        p.style.display = p.style.display === 'block' ? 'none' : 'block';
    }
    function rejectReq(id) { db.ref(`users/${myId}/requests/${id}`).remove(); }
    function acceptFriend(id, name) {
        db.ref(`users/${myId}/friends/${id}`).set({name: name});
        db.ref(`users/${id}/friends/${myId}`).set({name: myName});
        rejectReq(id);
    }
