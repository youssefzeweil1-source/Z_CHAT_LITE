    function setupPresence() {
        const myStatusRef = db.ref(`users/${myId}`);
        db.ref(".info/connected").on("value", (snap) => {
            if (snap.val() === true) {
                myStatusRef.onDisconnect().update({ online: false });
                myStatusRef.update({ name: myName, online: true, room: myRoom });
            }
        });
    }

    // Ø¥Ø±Ø³Ø§Ù„ Ø±Ø³Ø§Ù„Ø©
    function sendMsg() {
        const input = document.getElementById('msgInput');
        if(!input.value.trim()) return;
        db.ref(`rooms/${myRoom}/messages`).push({
            user: myName,
            text: input.value,
            id: myId,
            time: Date.now()
        });
        input.value = "";
    }

    // Ø§Ø³ØªÙ‚Ø¨Ø§Ù„ Ø§Ù„Ø±Ø³Ø§Ø¦Ù„
    function loadMessages() {
        const container = document.getElementById('chat-container');
        db.ref(`rooms/${myRoom}/messages`).limitToLast(30).on('child_added', (snap) => {
            const m = snap.val();
            const div = document.createElement('div');
            div.className = `msg ${m.id === myId ? 'sent' : 'received'}`;
            div.innerHTML = `<span class="msg-info">${m.user}</span>${m.text}`;
            container.appendChild(div);
            container.scrollTop = container.scrollHeight;
        });
    }

    // Ù†Ø¸Ø§Ù… Ø§Ù„Ø£ØµØ¯Ù‚Ø§Ø¡ ÙˆØ§Ù„Ø¥Ø´Ø¹Ø§Ø±Ø§Øª Ø§Ù„ØªÙØ§Ø¹Ù„ÙŠØ©
