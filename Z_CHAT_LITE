<script>
  const firebaseConfig = {
    apiKey: "AIzaSyAlim9FOvDcMqTJWINoBCHk3k6DNXS-jTo",
    authDomain: "zeweil-chat.firebaseapp.com",
    databaseURL: "https://zeweil-chat-default-rtdb.europe-west1.firebasedatabase.app",
    projectId: "zeweil-chat",
    storageBucket: "zeweil-chat.appspot.com",
    messagingSenderId: "79843372176",
    appId: "1:79843372176:web:ea511efffae60c2a6cfc15",
  };

  firebase.initializeApp(firebaseConfig);
  const db = firebase.database();
  let currentRoom = "", currentUser = "", roomPass = "";

  firebase.auth().signInAnonymously();

  function checkRoom() {
    const room = document.getElementById("room").value.trim();
    const name = document.getElementById("username").value.trim();
    if (!room || !name) return;

    db.ref(`rooms/${room}`).once("value", (snap) => {
      const data = snap.val();
      currentRoom = room;
      currentUser = name;

      if (data && data.status === 'passwordProtected' && data.password) {
        roomPass = data.password;
        document.getElementById("password-modal").style.display = "block";
      } else {
        startChat();
      }
    });
  }

  function verifyPassword() {
    const input = document.getElementById("pass-input").value;
    if (input === roomPass) {
      document.getElementById("password-modal").style.display = "none";
      startChat();
    } else {
      alert("ÙƒÙ„Ù…Ø© Ø§Ù„Ù…Ø±ÙˆØ± Ø®Ø·Ø£!");
    }
  }

  function startChat() {
    document.getElementById("login-area").style.display = "none";
    document.getElementById("msg-area").style.display = "flex";
    document.getElementById("room-display").innerText = "ØºØ±ÙØ©: " + currentRoom;

    db.ref("rooms/" + currentRoom + "/messages").limitToLast(15).on("child_added", (snap) => {
      renderMsg(snap.val());
    });

    db.ref("rooms/" + currentRoom + "/users").on("value", (snap) => {
      document.getElementById("online-count").innerText = "Ù…ØªØµÙ„: " + (snap.numChildren() || 0);
    });
  }

  function sendMessage() {
    const input = document.getElementById("message");
    if (!input.value.trim()) return;
    db.ref("rooms/" + currentRoom + "/messages").push({
      name: currentUser,
      message: input.value.trim(),
      timestamp: firebase.database.ServerValue.TIMESTAMP
    });
    input.value = "";
  }

  function renderMsg(data) {
    const box = document.getElementById("chat-box");
    const div = document.createElement("div");
    div.className = "msg";
    const time = data.timestamp ? new Date(data.timestamp).toLocaleTimeString('ar-EG', {hour:'2-digit', minute:'2-digit'}) : "";
    div.innerHTML = `<div class="sender">${data.name} <span class="time">${time}</span></div><div class="text">${data.message}</div>`;
    box.appendChild(div);
    box.scrollTop = box.scrollHeight;
  }
</script>
